{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@deskly/auth": ["modules/auth/src/index.ts"],
      "@deskly/booking": ["modules/booking/src/index.ts"],
      "@deskly/environments": ["modules/environments/src/index.ts"],
      "@deskly/landing-page": ["modules/landing-page/src/index.ts"],
      "@deskly/location": ["modules/location/src/index.ts"],
      "@deskly/location-management/location": [
        "modules/location-management/location/src/index.ts"
      ],
      "@deskly/location-management/resources": [
        "modules/location-management/resources/src/index.ts"
      ],
      "@deskly/navigation": ["modules/navigation/src/index.ts"],
      "@deskly/rxjs-operators": ["modules/rxjs-operators/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "fullTemplateTypeCheck": true,
    "enableIvy": true
  }
}
